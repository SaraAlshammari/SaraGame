  <script>
    let selectedCategories = [];
    const maxSelection = 6;
  
    function selectCategory(card) {
      const categoryName = card.querySelector('.category-card-name').innerText;
  
      if (card.classList.contains('selected')) {
        // If already selected, remove selection
        card.classList.remove('selected');
        selectedCategories = selectedCategories.filter(category => category !== categoryName);
      } else if (selectedCategories.length < maxSelection) {
        // If not selected and below limit, add selection
        card.classList.add('selected');
        selectedCategories.push(categoryName);
      }
  
      // Enable or disable the proceed button
      const proceedButton = document.getElementById('proceedButton');
      proceedButton.style.display = selectedCategories.length === maxSelection ? 'inline-block' : 'none';
  
      // Scroll to the button if 6 categories are selected
      if (selectedCategories.length === maxSelection) {
        proceedButton.scrollIntoView({ behavior: 'smooth' });
      }
    }
  
    function saveSelectedCategories() {
      // Save selected categories to localStorage
      localStorage.setItem('selectedCategories', JSON.stringify(selectedCategories));
    }
  </script>
